<div class="row">
  <nav>
    <div class="nav-wrapper grey darken-2">
      <%= form_tag(locations_path, method: "get", id: "search-form") do %>
      <div class="input-field col s4">
        <%= text_field_tag :name, params[:name], placeholder: "Search Locations" %>
      </div>
      <div class="input-field col s4">
        <%= submit_tag "Search", name: nil,  id:"search-button"%>
      </div>
      <% end %>
    </div>
  </nav>
</div>


<div class="row">
  <div class="col s3 grey lighten-2" height=max>
    <ul class="center-align">
      <div>
        Search Results
      </div>
      <ul class="collapsible" data-collapsible="accordion">
        <li>
          <!-- <div class="collapsible-header"></i>Search Results</div>
          <div class="collapsible-body" id="Search API results Div"> -->
          <% if @yelp %>
          <% @yelp.businesses.each do |business|%>
          <li>
            <img src="<%=business.image_url%>" alt="restaurant image" height="100" width="100" />
          </li>
          <li>
            <a href="locations/<%= business.id %>"> <%= business.name %> </a>
          </li>
          <li>
            <%= business.location.display_address[0] %> <br> <%= business.location.display_address[2] %>
          </li>

          <% end %>
          <% end %>
          <!-- </div> -->
        </li>
      </ul>
    </ul>
  </div>
  <div class="col s9 grey lighten-3" id="map">
  </div>
</div>
