<img src="<%= @yelp.business.image_url%>" alt="restaurant image" />
<%= @yelp.business.name %>


<%= form_for [@review] do |f| %>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_field :comment%>
  </div>
  <div class="form-group">
    <%= f.label :score %>
    <%= f.text_field :score%>
    <%= f.hidden_field :location_id, value: @yelp.business.id %>
  </div>
  <%= f.submit%>
<%end%>


<%@reviews.each do |review| %>
<%=review.comment %>
<%=review.score %>
<%end%>
