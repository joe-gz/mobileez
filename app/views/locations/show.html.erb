<div class="row" id="businessimg">
  <div class="col s3">
    <img src="<%= @yelp.business.image_url%>" alt="restaurant image" height="250" width="250" />
  </div>

  <div class="col s9">
    <div class="row" id="top">
      <div class="col s9">
        <h4 class="bname"><%= @yelp.business.name %><h4>
        <p class="address">1234 Main Street<br>Washington, DC 20001</p>
      </div>
      <div class="col s1">
        <!-- Blue button setup-->
        <!-- Modal Trigger -->
        <div class="center">
        <a class="btn-floating waves-effect btn-small waves-light light-blue darken-1" data-target="modal1" id="modal1"class="btn modal-trigger"><i class="fa fa-question"></i></a>
        <p class="btn-content">How do we get this?</p>
      </div>

        <!-- Modal Structure -->
        <div id="modal1" class="modal modal-fixed-footer">
            <div class="modal-content">
              <h4>Modal Header</h4>
              <p>A bunch of text</p>
            </div>
            <div class="modal-footer">
              <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Close</a>
            </div>
        </div>

      </div>
      <div class="col s1">
        <div class="center overall">
          <i class="fa fa-wheelchair fa-lg"></i>
          <p class="promo-caption">Overall</p>
          <p class="promo-rating">5/5</p>
        </div>
      <div>
      <div class="col s1">
        <h4></h4>
      </div>
    </div>
  </div>


      <div class="row" id="promosection">
        <div class="col s3">
          <div class="center promo">
            <i class="fa fa-cutlery fa-2x"></i>
            <p class="promo-caption">Table</p>
            <p class="promo-rating">5/5</p>
          </div>
        </div>
        <div class="col s3">
          <div class="center promo">
            <i class="fa fa-wheelchair fa-2x"></i>
            <p class="promo-caption">Ramp</p>
            <p class="promo-rating">5/5</p>
          </div>
        </div>
        <div class="col s3">
          <div class="center promo">
            <i class="fa fa-car fa-2x"></i>
            <p class="promo-caption">Parking</p>
            <p class="promo-rating">5/5</p>
          </div>
        </div>
        <div class="col s3">
          <div class="center promo">
            <i class="fa fa-venus-mars fa-2x"></i>
            <p class="promo-caption">Restrooms</p>
            <p class="promo-rating">5/5</p>
          </div>
        </div>

      </div>
      <ul class="wrap">
        <li><%= button_to "WRITE A REVIEW" , {action: "create"}, {class: "waves-effect button grey lighten-1"} %></li>
        <li><%= button_to "FAVORITE" , {action: "new"}, {class: "waves-effect button grey lighten-1"} %></li>
      </ul>
      <ul class="center" id="menu">
        <li><%= link_to "Reviews", reviews_path %></li>
        <li><a href="#">Description</a></li>
      </ul>
  </div>
</div>

<% if current_user %>
  <%= form_for [@review] do |f| %>
    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_field :comment%>
    </div>
    <div class="form-group">
      <%= f.label :score %>
      <%= f.text_field :score%>
      <%= f.hidden_field :location_id, value: @yelp.business.id %>
    </div>
    <%= f.submit%>
  <%end%>
<%end%>
<%@reviews.each do |review| %>
  <%=review.comment %>
  <%=review.score %>
<%end%>
